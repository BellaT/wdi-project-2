<ul data-orbit class="example-orbit">
  <% @festivals.each_with_index do |festival, index| %>
  <li>
    <div class="testdiv" style="background-image: url(<%= festival.main_image.url %>);"></div>
    <div class="orbit-caption">
      <%= link_to festival.title, festival_path(festival.id) %>
    </div>
  </li>
  <% end %>
</ul>  

<% @festivals.in_groups_of(2) do |group| %>
<div class="row" data-equalizer>
  <div class="medium-6 square columns" style="background-image: url(<%= group.first.main_image.url %>);" data-equalizer-watch>
    <h2 class="vertical-align"><%= link_to group.first.title, festival_path(group.first.id) %></h2>
  </div>
  <% if group.last != nil %>
  <div class="medium-6 square columns" style="background-image: url(<%= group.last.main_image.url %>);" data-equalizer-watch>
    <h2 class="vertical-align"><%= link_to group.last.title, festival_path(group.last.id) %></h2>
  </div>
  <% end %>
</div>
<% end %>
