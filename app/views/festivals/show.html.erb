<div class="parallax-window" data-parallax="scroll" data-image-src="<%= @festival.main_image.url %>">
   <h2><%= @festival.title %></h2>
</div>
<dl class="sub-nav row">
  <dt></dt>
  <dd><%= @festival.city %>, <%= @festival.location %></dd>
  <dd><%= @festival.festival_date %></dd>
  <dd><%= link_to "Tickets", @festival.tickets %></dd>
  <dd><%= link_to "Website", @festival.website %></dd>
  <% if !current_user.voted_up_on? @festival %>
  <dd><%= link_to "Favourite", like_festival_path(@festival.id), method: :post %></dd>
  <% else %>
  <dd><%= link_to "Unfavourite", dislike_festival_path(@festival.id), method: :delete %></dd>
  <% end %>
</dl>
<div class="row">
  <h3>Info</h3>
  <p><%= @festival.description %></p>
</div>
<div class="parallax-window" data-parallax="scroll" data-image-src="<%= @festival.second_image.url %>">
</div>
<div class="row">
  <h3>Travel</h3>
  <p><%= @festival.transport %></p>
</div>
<div class="parallax-window" data-parallax="scroll" data-image-src="<%= @festival.third_image.url %>">
</div>
<div class="row">
  <h3>Accommodation</h3>
  <p><%= @festival.accommodation %></p>
</div>
    
