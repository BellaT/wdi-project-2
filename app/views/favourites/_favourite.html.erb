<div class="card">
  <%= image_tag favourite.image, class: "card-img-top" %>
  <div class="card-block">
    <h4 class="card-title"><%= favourite.title %></h4>
    <p class="card-text"><%= favourite.description %></p>
    <p class="card-text"><small class="text-muted">Listed <%= distance_of_time_in_words(Time.now, favourite.created_at) %> ago</small></p>
  </div>
</div>